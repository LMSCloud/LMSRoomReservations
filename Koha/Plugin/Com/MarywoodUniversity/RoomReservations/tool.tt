  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const lmsrHeadingMain = document.getElementById('lmsr-heading-main');
      const lmsrMenuTemplate = document.getElementById('lmsr-menu-template');
      const lmsrMenuTemplateContent = lmsrMenuTemplate.content;
      document.body.appendChild(lmsrMenuTemplateContent);

      toolActionsForm = document.querySelector('form[name="tool_actions"]');
      actionsMenu = document.querySelectorAll('.lmsr-menu-list-item');
      actionsInput = document.querySelector('input[name="tool_actions_selection"]');
      actionsSubmit = document.querySelector('input[name="tool-actions-submit"]');

      toolActionsForm.addEventListener('submit', (e) => {
        const action = document.getElementById('tools-actions-input');
        if (action === '') { e.preventDefault(); return false; }
      });

      actionsMenu.forEach((action) => {
          action.addEventListener('click', (e) => {
              actionsInput.setAttribute('value', `${e.target.dataset.value}`);
              console.log(actionsInput.value);
              actionsSubmit.click();
          });
      });
    });

    if ( window.history.replaceState ) { 
        window.history.replaceState( null, null, window.location.href ); 
    } 
  </script>
